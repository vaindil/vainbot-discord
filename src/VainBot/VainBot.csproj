<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <OutputType>Exe</OutputType>
    <CodeAnalysisRuleSet>..\..\VainBot.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net.Commands" Version="2.1.0" />
    <PackageReference Include="Discord.Net.Core" Version="2.1.0" />
    <PackageReference Include="Discord.Net.WebSocket" Version="2.1.0" />
