[Unit]
Description=VainBot - a Discord bot with a lame name - crendor branch
After=network.target

[Service]
Type=simple
User=vbot-d-crendor
WorkingDirectory=/home/vbot-d-crendor/bot
ExecStart=/usr/bin/dotnet /home/vbot-d-crendor/bot/VainBot.dll
Restart=on-failure
StandardOutput=file:/home/vbot-d-crendor/logs/out.log
StandardError=file:/home/vbot-d-crendor/logs/err.log

[Install]
WantedBy=multi-user.target